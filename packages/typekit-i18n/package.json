{
  "name": "typekit-i18n",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "typekit-i18n": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./runtime": {
      "types": "./src/runtime/index.ts",
      "import": "./src/runtime/index.ts"
    },
    "./codegen": {
      "types": "./src/codegen/index.ts",
      "import": "./src/codegen/index.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist generated",
    "build:cli": "vite build --config vite.cli.config.ts",
    "gen": "node --import tsx src/codegen/cli.ts generate",
    "validate:yaml-example": "node --import tsx src/codegen/cli.ts validate --input resources/translations/translationTableExample.yaml --format yaml",
    "build": "vite build && pnpm run build:cli && tsc -p tsconfig.build.json",
    "dev": "vite build --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "fast-csv": "^5.0.5",
    "glob": "^11.0.3",
    "picocolors": "^1.1.1",
    "tsx": "^4.20.5",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^6.2.0"
  }
}
