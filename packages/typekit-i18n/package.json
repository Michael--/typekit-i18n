{
  "name": "@number10/typekit-i18n",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Michael--/typekit-i18n.git",
    "directory": "packages/typekit-i18n"
  },
  "homepage": "https://michael--.github.io/typekit-i18n/",
  "bugs": {
    "url": "https://github.com/Michael--/typekit-i18n/issues",
    "email": "mr@number10.de"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/*.js",
    "dist/src",
    "README.md"
  ],
  "bin": {
    "typekit-i18n": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/src/runtime/index.d.ts",
      "import": "./dist/runtime.js"
    },
    "./runtime/basic": {
      "types": "./dist/src/runtime/basic.d.ts",
      "import": "./dist/runtime-basic.js"
    },
    "./runtime/icu": {
      "types": "./dist/src/runtime/icu.d.ts",
      "import": "./dist/runtime-icu.js"
    },
    "./codegen": {
      "types": "./dist/src/codegen/index.d.ts",
      "import": "./dist/codegen.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist generated",
    "build:cli": "vite build --config vite.cli.config.ts",
    "gen": "node --import tsx src/codegen/cli.ts generate",
    "validate:yaml-example": "node --import tsx src/codegen/cli.ts validate --input resources/translations/translationTableExample.yaml --format yaml",
    "build": "vite build && pnpm run build:cli && tsc -p tsconfig.build.json",
    "dev": "vite build --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "esbuild": "^0.25.10",
    "fast-csv": "^5.0.5",
    "glob": "^11.0.3",
    "picocolors": "^1.1.1",
    "tsx": "^4.20.5",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^6.2.0"
  }
}
