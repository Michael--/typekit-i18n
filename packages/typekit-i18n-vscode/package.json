{
  "name": "typekit-i18n-vscode",
  "displayName": "typekit-i18n",
  "description": "VSCode extension for typekit-i18n translation workflows.",
  "version": "0.0.1",
  "publisher": "typekit-i18n",
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:yaml",
    "onLanguage:csv"
  ],
  "main": "./dist/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "typekitI18n.refreshIndex",
        "title": "typekit-i18n: Refresh Translation Index"
      },
      {
        "command": "typekitI18n.runDiagnostics",
        "title": "typekit-i18n: Run Diagnostics"
      }
    ],
    "configuration": {
      "title": "typekit-i18n",
      "properties": {
        "typekitI18n.translationGlobs": {
          "type": "array",
          "description": "Workspace globs used to discover translation source files.",
          "default": [
            "**/translations/**/*.{yaml,yml,csv}"
          ],
          "items": {
            "type": "string"
          }
        },
        "typekitI18n.completionMode": {
          "type": "string",
          "enum": [
            "fallback",
            "always",
            "alwaysPreferExtension"
          ],
          "default": "alwaysPreferExtension",
          "description": "Completion strategy. 'fallback' disables extension key completion in TypeScript/TSX to avoid duplicates with typed key suggestions. 'alwaysPreferExtension' keeps extension completions active and prioritizes them."
        },
        "typekitI18n.previewLocales": {
          "type": "array",
          "description": "Locales shown in completion details and hover preview. Empty uses a default locale preview.",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "typekitI18n.previewMaxLocales": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "description": "Maximum number of locales shown in completion details and hover preview."
        },
        "typekitI18n.enablePlaceholderSnippets": {
          "type": "boolean",
          "default": true,
          "description": "When enabled, completion inserts placeholder object snippets for parameterized translation keys if no argument object exists yet."
        }
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "package:vsix": "pnpm run build && vsce package --allow-missing-repository --no-dependencies --skip-license --allow-package-all-secrets --allow-package-env-file",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.2",
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.95.0",
    "typescript": "^5.9.3",
    "vite": "^6.2.0"
  }
}
