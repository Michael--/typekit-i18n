{
  "name": "@typekit-i18n/docs-site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf docs/.vitepress/dist",
    "docs:dev": "vitepress dev docs --port 4174",
    "gen": "echo \"No code generation defined for docs-site\"",
    "build": "pnpm run docs:build",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs --port 4175",
    "lint": "eslint --no-error-on-unmatched-pattern \"docs/**/*.ts\"",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "typekit-i18n": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "typescript": "^5.9.3",
    "mermaid": "^11.12.2",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.4.0"
  }
}
