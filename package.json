{
  "name": "typekit-i18n-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "build": "pnpm -r --if-present build",
    "dev:playground": "pnpm --filter @typekit-i18n/playground-ts dev",
    "dev:docs": "pnpm --filter @typekit-i18n/docs-site docs:dev",
    "generate": "tsx scripts/translation-generator.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "pnpm run generate && pnpm run typecheck && pnpm run test"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^8.43.0",
    "picocolors": "^1.1.1",
    "fast-csv": "^5.0.5",
    "glob": "^11.0.3",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@number10/ci-runner-cli": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "cspell": "^9.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
