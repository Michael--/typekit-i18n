{
  "name": "typekit-i18n-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "clean": "pnpm -r --no-bail --if-present run clean",
    "gen": "pnpm -r --if-present run gen",
    "build": "pnpm -r --if-present run build",
    "test": "pnpm -r --if-present run test",
    "lint": "pnpm -r --if-present run lint",
    "lint42": "eslint",
    "typecheck": "pnpm -r --if-present run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "spell": "cspell \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "dev:playground": "pnpm --filter @typekit-i18n/playground-ts dev",
    "gen:typekit-i18n": "pnpm --filter typekit-i18n run build && pnpm --filter @typekit-i18n/playground-ts run gen",
    "dev:docs": "pnpm --filter @typekit-i18n/docs-site docs:dev",
    "generate": "pnpm run gen",
    "check:codegen": "pnpm run gen && git diff --exit-code",
    "test:watch": "vitest",
    "ci": "ci-runner",
    "check": "ci-runner --target full"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@number10/ci-runner-cli": "^0.2.0",
    "@typescript-eslint/typescript-estree": "^8.43.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "cspell": "^9.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
