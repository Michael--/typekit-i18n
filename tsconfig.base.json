{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "baseUrl": "."
  }
}
